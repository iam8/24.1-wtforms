{# Homepage template. #}

{% extends "base.jinja2" %}

{% block content %}

    <h1 class="display-1">Pets</h1>

    {% for pet in pets %}
        <h2>
            <a href="/{{ pet.id }}">{{ pet.name }}</a>
            {% if pet.is_available %}
                <b>is available!</b>
            {% else %}
            {% endif %}
        </h2>

        <div>
            <img class="pet-img" src="{{ pet.photo_url }}" alt="{{ pet.name }}">
        </div>
    {% endfor %}

{% endblock content %}

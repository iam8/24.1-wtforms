{# Template for displaying and editing a pet. #}

{% extends "base.jinja2" %}

{% block content %}

    <h1>{{ pet.name }}</h1>

    <section>
        <div>
            <img class="pet-img" src="{{ pet.photo_url }}" alt="{{ pet.name }}">
        </div>
        <div>Species: {{ pet.species }}</div>
        <div>Age (years): {{ pet.age }}</div>
    </section>

    <section>
        <h3>Edit Pet</h3>
        <form method="POST">
            {{ form.hidden_tag() }}

            {% for field in form
               if field.widget.input_type != "hidden" %}

                {% if field.type == "RadioField" %}
                    {{ field.label }}
                    <div>
                        {% for subfield in field %}
                            <span>
                                {{ subfield }}
                                {{ subfield.label }}
                            </span>
                        {% endfor %}
                    </div>
                {% else %}
                    <div>
                        {{ field.label }}
                        <div>{{ field }}</div>
                    </div>
                {% endif %}

                {% for error in field.errors %}
                    {{ error }}
                {% endfor %}

            {% endfor %}

            <button type="submit">Update</button>
        </form>
    </section>

{% endblock content %}


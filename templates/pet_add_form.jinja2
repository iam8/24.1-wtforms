{% extends "base.jinja2" %}

{% block content %}

    <h1>Add New Pet</h1>

    <div>
        <a href="/">Return to home</a>
    </div>

    <form method="POST">
        {{ form.hidden_tag() }}

        {% for field in form
           if field.widget.input_type != "hidden" %}

            <div>
                {{ field.label }}
                <div>{{ field }}</div>
            </div>

            {% for error in field.errors %}
                {{ error }}
            {% endfor %}

        {% endfor %}

        <button type="submit">Add</button>
    </form>

{% endblock content %}
